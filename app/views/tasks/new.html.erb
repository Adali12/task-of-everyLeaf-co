<% if logged_in? %>
<div class="card" style="width: 25rem;margin-left: 30rem;">
  <div class="card-header" style="background-color:black; height:12rem;color:white;" ><h1>New Task</h1></div>
  <div class="card-body" ><td><%= @task.created_at %></td>
  <%= render 'form', task: @task %></div>
  <div class="card-footer"><%= link_to 'Back', tasks_path %></div>
</div>
</div>
<% else %>
<div class="card" style="width: 25rem;margin-left: 30rem;">
<div class="card-header" style="background-color:black; height:12rem;color:white;" ><h1>Log in</h1></div>
<div class="card-body" >
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="form-group">
  <%= f.label :email %>
    <%= f.email_field :email,class:"form-control",id:"formGroupExampleInput", placeholder:"Enter Your Email",style:"width:20 rem;" %>
  </div>
  <div class="form-group">
  <%= f.label :password %>
    <%= f.password_field :password,class:"form-control",id:"formGroupExampleInput2", placeholder:"Enter Your Password",style:"width:20 rem;" %><br>
   </div>
   <div class="card-footer"> <%= f.submit "Log in",class:"btn btn-info" %>
    <p>Don't have an account?<br> <%= link_to "Sign up", new_user_path,class:"btn btn-info" %></div>
<% end %>
</div>
<% end%>
