<p id="notice"><%= notice %></p>
<h1>Users</h1>
<table>
  <thead>
    <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Task</th>
    <th>Admin</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td> <%= Task.where(user_id: user.id).count %></td>
      <td><%= user.admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New User', new_user_path,class:"btn btn-info" %>
